<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.smart_eapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="net.smart_eapp.LaunchActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.smart_eapp.BookListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="net.smart_eapp.catalog.BookTop"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="net.smart_eapp.catalog.PageListActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="net.smart_eapp.catalog.PageActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="net.smart_eapp.photo.BookTop"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="net.smart_eapp.photo.PageListActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="net.smart_eapp.photo.PageActivity"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="net.smart_eapp.BitmapView"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name=".catalog.UpImageView"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
    </application>

</manifest>