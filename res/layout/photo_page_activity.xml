<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <net.smart_eapp.photo.PhotoViewPager
        android:id="@+id_photo_page_fragment/dragable"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id_photo_page_fragment/top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/photo_transparent_title"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id_photo_page_fragment/left_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/noimage"
            android:src="@drawable/left_selector" />

        <ImageView
            android:id="@+id_photo_page_fragment/right_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/noimage"
            android:src="@drawable/right_selector" />

        <TextView
            android:id="@+id_photo_page_fragment/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id_photo_page_fragment/right_image"
            android:layout_toRightOf="@+id_photo_page_fragment/left_image"
            android:gravity="center|center_vertical"
            android:textColor="@drawable/photo_page_selector"
            android:textSize="20dp" />
    </RelativeLayout>

</merge>